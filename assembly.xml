<assembly>
  <id>dist</id>

  <formats>
    <format>zip</format>
  </formats>

  <files>
    <file>
      <source>${project.build.directory}/${project.build.finalName}.jar</source>
      <destName>${assembly.jar}</destName>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.build.directory}/${project.build.finalName}-jdk14.jar</source>
      <destName>${assembly-14.jar}</destName>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.html</include>
        <include>build.xml</include>
        <include>build.properties</include>
        <include>apiClasses.properties</include>
        <include>pom.xml</include>
        <include>assembly.xml</include>
        <include>license-header.txt</include>
        <include>license-header.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>build-date</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/apidocs</directory>
      <outputDirectory>/javadoc</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src</directory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
        <include>manifest</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/deprecatedsrc</directory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
        <include>manifest</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/xmlimplsrc</directory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/toolsrc</directory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/testsrc</directory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
        <include>**/*.js</include>
        <include>**/*.jstest</include>
        <include>**/*.html</include>
        <include>**/*.skip</include>
        <include>**/*.tests</include>
        <include>**/*.doctest</include>
        <include>**/*.tar.gz</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/examples</directory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.js</include>
        <include>**/*.html</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
